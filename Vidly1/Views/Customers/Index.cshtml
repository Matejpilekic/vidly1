@model IEnumerable<Vidly1.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "New", "Customers", null, new { @class = "btn btn-primary" })

</p>

@if (!Model.Any())
{
    <p>We don't have any customers yet.</p>
}
else
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>Membership Type</th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>

            <td>@item.MembershipType.Name</td>
            <td>

                @Html.ActionLink("Details", "Details", "Customers", new { id = item.Id }, null)

            </td>
            <td>

                @Html.ActionLink("Edit", "Edit", "Customers", new { id = item.Id },null)

            </td>
        </tr>
        }

    </table>
}
